<%= form_for @post do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :content %>
  <%= text_area_tag('post[content]', @post.content, size: "50x6") %><br>
  <%= f.label :category_id %>
  <%= collection_select :post, :category_id, Category.all, :id, :name %>
  <%= f.submit %>
<% end %>
